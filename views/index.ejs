<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg mt-5">
        <div class="card-header bg-primary text-white text-center py-3">
          <h4>Welcome</h4>
        </div>
        <div class="card-body p-4">
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          
          <form action="/auth/login" method="POST">
            <div class="mb-3 text-center">
              <input type="text" class="form-control form-control-lg text-center" id="userId" name="userId" 
                    placeholder="Enter 6 digits" pattern="[0-9]{6}" maxlength="6" required>
            </div>
            
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">
                Enter
              </button>
            </div>
          </form>
          
          <div class="text-center mt-3">
            <a href="https://t.me/ZhongKai_KL" class="dev-credit" style="color: #4e73df; text-decoration: none; font-weight: 500;">
              Dev - 中凯
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 