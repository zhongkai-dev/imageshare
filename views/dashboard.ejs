<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
  <div class="container">
    <a class="navbar-brand" href="#">File Notes</a>
    <div class="ms-auto">
      <span class="badge bg-primary me-2">User ID: <%= userId %></span>
      <a href="/auth/logout" class="btn btn-outline-danger btn-sm">Logout</a>
    </div>
  </div>
</nav>

<div class="row">
  <div class="col-md-12 mb-4">
    <div class="card shadow">
      <div class="card-header">
        <h5 class="mb-0">Upload New File</h5>
      </div>
      <div class="card-body">
        <form action="/files/upload" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="file" class="form-label">Select File</label>
            <input class="form-control" type="file" id="file" name="file" required>
            <div class="form-text">Max file size: 10MB</div>
          </div>
          <button type="submit" class="btn btn-primary">Upload</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Files List -->
  <div class="col-md-12">
    <div class="card shadow">
      <div class="card-header">
        <h5 class="mb-0">Your Files</h5>
      </div>
      <div class="card-body">
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        
        <% if (files && files.length > 0) { %>
          <div class="row">
            <% files.forEach(file => { %>
              <div class="col-md-4 mb-4">
                <div class="card h-100 file-card">
                  <div class="card-body text-center">
                    <div class="file-icon">
                      <% if (file.mimetype.startsWith('image/')) { %>
                        <i class="fas fa-file-image text-primary"></i>
                      <% } else if (file.mimetype === 'application/pdf') { %>
                        <i class="fas fa-file-pdf text-danger"></i>
                      <% } else if (file.mimetype.includes('document') || file.mimetype.includes('word')) { %>
                        <i class="fas fa-file-word text-primary"></i>
                      <% } else if (file.mimetype.includes('spreadsheet') || file.mimetype.includes('excel')) { %>
                        <i class="fas fa-file-excel text-success"></i>
                      <% } else { %>
                        <i class="fas fa-file text-secondary"></i>
                      <% } %>
                    </div>
                    <h6 class="card-title text-truncate" title="<%= file.originalName %>">
                      <%= file.originalName %>
                    </h6>
                    <p class="card-text text-muted small">
                      Size: <%= (file.size / 1024).toFixed(2) %> KB<br>
                      Uploaded: <%= new Date(file.uploadDate).toLocaleString() %>
                    </p>
                    <div class="d-flex justify-content-center gap-2">
                      <a href="/files/download/<%= file._id %>" class="btn btn-sm btn-primary">
                        <i class="fas fa-download me-1"></i> Download
                      </a>
                      <form action="/files/delete/<%= file._id %>" method="POST">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this file?')">
                          <i class="fas fa-trash-alt me-1"></i> Delete
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
            <h5 class="text-muted">No files uploaded yet</h5>
            <p>Upload your first file using the form above.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div> 